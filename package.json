{
	"name": "mandelbrot",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"update-everything-to-latest-versions": "npx npm-check-updates -u; npm install",
		"build-wasm-golang": "cd wasm/golang; cross-env GOOS=js GOARCH=wasm go build -o \"../../static/mandelbrot_renderer/main.wasm\";",
		"build-worker-script-dev": "npm run build-wasm-golang; webpack --mode=development --devtool=inline-source-map;",
		"build-worker-script-prod": "npm run build-wasm-golang; webpack --mode=production;",
		"dev": "npm install; npm run copy-static; npm run ts-check; npm run build-worker-script-dev;  vite dev",
		"copy-static": "cp ./node_modules/svelte-material-ui/bare.css ./static/svelte-material-ui.css",
		"build": "npm install; npm run copy-static; npm run ts-check; npm run build-worker-script-prod; vite build",
		"preview": "npm run build; vite preview",
		"ts-check": "svelte-kit sync; svelte-check --tsconfig ./tsconfig.json",
		"ts:watch": "svelte-kit sync; svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"deploy": "npm run build; vercel --prod;"
	},
	"author": "Marcos Go√±alons",
	"license": "ISC",
	"devDependencies": {
		"@fontsource/fira-mono": "^5.0.13",
		"@neoconfetti/svelte": "^2.2.1",
		"@smui/button": "^7.0.0",
		"@smui/slider": "^7.0.0",
		"@smui/textfield": "^7.0.0",
		"@sveltejs/adapter-auto": "^3.2.3",
		"@sveltejs/kit": "^2.5.21",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@types/eslint": "^9.6.0",
		"@types/progressbar.js": "^1.1.7",
		"@types/toastify-js": "^1.12.3",
		"cross-env": "^7.0.3",
		"http-server": "^14.1.1",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"svelte": "^4.2.18",
		"svelte-awesome-color-picker": "^3.1.3",
		"svelte-check": "^3.8.5",
		"ts-loader": "^9.5.1",
		"tslib": "^2.6.3",
		"typescript": "^5.5.4",
		"vite": "^5.4.0",
		"webpack": "^5.93.0",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"@vercel/analytics": "^1.3.1",
		"bowser": "^2.11.0",
		"progressbar.js": "^1.1.1",
		"svelte-loading-spinners": "^0.3.6",
		"svelte-material-ui": "^7.0.0",
		"toastify-js": "^1.12.0"
	},
	"type": "module"
}
